{
    "name": "coryhubbell/development-translation-bridge",
    "description": "Universal WordPress page builder translation system with AI optimization",
    "type": "wordpress-theme",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Cory Hubbell",
            "email": "cory@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "brain/monkey": "^2.6",
        "php-stubs/wordpress-stubs": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "DEVTB\\TranslationBridge\\": "translation-bridge/"
        },
        "classmap": [
            "includes/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DEVTB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:watch": "phpunit --watch"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
